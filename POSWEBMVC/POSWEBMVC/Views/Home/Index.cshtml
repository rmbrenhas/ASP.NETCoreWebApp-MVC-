@model IEnumerable<POSWEBMVC.Models.Product>

@{
    ViewData["Title"] = "Home Page";

}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3">

            <div class="card" style="width: 15rem;">
                <img src="@(" /images/" + item.Image)" class="card-img-top" alt="Card Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Brand:@item.Brand.BrandName</p>
                    <p class="card-text">Price:@item.UnitPrice</p>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"><i class='fa fa-shopping-cart'></i></button>

                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <div id="exampleModal" class="modal" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Add Product</h5>
                                        <h7 class="modal-title">Total: 700,99€</h7>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Name:</label>
                                            @Html.DisplayName(@item.Name)
                                        </div>
                                        <div class="form-group">
                                            <label>Preço:</label>
                                            @item.UnitPrice
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i></button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                
                </div>
            </div>


        </div>


    }
</div>